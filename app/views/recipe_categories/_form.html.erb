<%= form_with(model: recipe_category, class: "contents") do |form| %>
  <% if recipe_category.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(recipe_category.errors.count, "error") %> prohibited this recipe_category from being saved:</h2>

      <ul class="list-disc ml-6">
        <% recipe_category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :category_name %>
    <%= form.text_field :category_name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": recipe_category.errors[:category_name].none?, "border-red-400 focus:outline-red-600": recipe_category.errors[:category_name].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
