<%= form_with(model: recipe, class: "contents") do |form| %>
  <% if recipe.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul class="list-disc ml-6">
        <% recipe.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :recipe_name %>
    <%= form.text_field :recipe_name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": recipe.errors[:recipe_name].none?, "border-red-400 focus:outline-red-600": recipe.errors[:recipe_name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :recipe %>
    <%= form.textarea :recipe, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": recipe.errors[:recipe].none?, "border-red-400 focus:outline-red-600": recipe.errors[:recipe].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :picture %>
    <%= form.text_field :picture, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": recipe.errors[:picture].none?, "border-red-400 focus:outline-red-600": recipe.errors[:picture].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :source %>
    <%= form.text_field :source, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": recipe.errors[:source].none?, "border-red-400 focus:outline-red-600": recipe.errors[:source].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :recipe_category_id %>
    <%= form.text_field :recipe_category_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": recipe.errors[:recipe_category_id].none?, "border-red-400 focus:outline-red-600": recipe.errors[:recipe_category_id].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
